pipeline {
    agent any

    environment {
        app = ''
        CI = 'true'
        GIT_SSH_COMMAND = 'ssh -o StrictHostKeyChecking=no'
        GH_TOKEN = credentials('jenkins-github-accesstoken')
        MONGO_PASS = credentials('mongo-home-user-pass')
        VERNEMQ_API_KEY = credentials('vernemq-api-key')
    }

    stages {
        stage ('prepare') {
            steps {
                script {
                    sh 'printenv'
                    try {
                        branch = env.GIT_LOCAL_BRANCH
                        branch = branch ?: env.GIT_BRANCH
                        if (branch == 'detached') {
                            branch = ''
                        }
                        branch = branch ?: env.ghprbActualCommit
                    } catch (e) {
                        println 'GIT BRANCH not detected'
                    }

                    sh 'git config user.name "jenkins-kabala.tech"'
                    sh 'git config user.email "jenkins@kabala.tech"'

                    if (!branch) {
                        error 'GIT branch to process not found'
                    }

                    if (branch.startsWith('origin/')) {
                        branch = branch.replaceAll('origin/', '')
                    }

                    println "GIT branch to process: ${branch}"
                    manager.addShortText(branch, 'white', 'navy', '1px', 'navy')
                }
            }
        }
        stage ('Checkout') {
            steps {
                    checkout([
                            $class                           : 'GitSCM',
                            branches                         : [[name: "${branch}"]],
                            browser                          : [$class: 'GithubWeb', repoUrl: 'https://github.com/mariusz-kabala/homeAutomation'],
                            doGenerateSubmoduleConfigurations: false,
                            userRemoteConfigs                : [[
                                credentialsId: 'github',
                                refspec      : '+refs/pull/*:refs/remotes/origin/pr/*',
                                url          : 'git@github.com:mariusz-kabala/homeAutomation.git'
                            ]]
                    ])
            }
        }
        stage ('Run shelly status update') {
            steps {
                dir("packages/task_updateShellyStatus") {
                    script {
                        sh "DOCKER_BUILDKIT=1 docker build --build-arg VERNE_MQ_API_KEY=${VERNEMQ_API_KEY} --build-arg VERNE_MQ_URL='mqtt.kabala.tech' --build-arg MONGO_CONNECTION_STR='mongodb://home:${MONGO_PASS}@192.168.50.30:27017,192.168.50.217:27017,192.168.50.119:27017/home?replicaSet=rs0' -f Dockerfile ../../"
                    }
                }
            }
        }
    }
}

