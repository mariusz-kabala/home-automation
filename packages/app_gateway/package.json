{
  "name": "@home/gateway",
  "version": "0.10.0",
  "author": "Mariusz Kabala <mariusz@kabala.waw.pl>",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "scripts": {
    "build": "rollup -c ./rollup.config.js",
    "build-declarations": "tsc --declaration --emitDeclarationOnly --out dist/index.d.ts && node ../../scripts/fixDeclaration.js",
    "watch": "rollup -w -c ./rollup.config.js",
    "dev": "concurrently \"yarn workspace @home/gateway watch\" \"nodemon dist/index.js\"",
    "start": "node dist/index.js",
    "prepare": "exit 0"
  },
  "dependencies": {
    "@home/commons": "0.4.0",
    "apollo-server-express": "^2.19.0",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-graphql": "^1.0.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4"
  }
}
